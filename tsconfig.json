{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "strict": true,
    "target": "es2015",
    "esModuleInterop": false,
    "isolatedModules": false,
    "module": "commonjs",
    "noEmit": false,
    "outDir": "./dist"
  },
  "include": ["src"]
}
